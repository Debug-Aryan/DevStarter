# Runtime mode: development | production
NODE_ENV=development

# Port for Express to listen on
PORT=5000

# MongoDB connection string (MongoDB Atlas or local)
# Example (local): mongodb://127.0.0.1:27017/devstarter
MONGO_URI=

# Secret used to sign JWT tokens (use a long random value)
JWT_SECRET=

# JWT expiration (jsonwebtoken format), e.g. 15m, 1h, 7d
JWT_EXPIRES_IN=7d

# Allowed frontend origin for CORS (Vite dev URL or deployed client URL)
CLIENT_URL=http://localhost:5173
