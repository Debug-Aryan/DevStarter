# ------------------------------------------------------------
# DevStarter Flask Backend Environment Variables
# Copy this file to `.env` and fill in the values.
# ------------------------------------------------------------

# Flask environment
# - development: enables debug-friendly behavior
# - production: safe defaults for deployment
FLASK_ENV=development

# Flask session / security secret
# Used by Flask for session signing and other security features.
# Generate a strong random value (at least 32 characters).
SECRET_KEY=

# Database connection string
# Default (if empty) is a local SQLite file: app.db
# Examples:
#   SQLite: sqlite:///app.db
#   Postgres: postgresql://user:password@host:5432/dbname
DATABASE_URL=

# JWT secret used to sign access tokens
# MUST be a strong random value (at least 32 characters) and MUST NOT be committed.
JWT_SECRET_KEY=

# Optional: CORS allowed origins for /api/*
# Use "*" for local development or provide a comma-separated list.
# Example: http://localhost:5173,https://yourdomain.com
CORS_ORIGINS=*
