# Django settings
# DEBUG controls Django debug mode.
# - True: helpful debug error pages (local development)
# - False: required for production
DEBUG=True

# SECRET_KEY is used for cryptographic signing.
# - In production, set this to a long random string and keep it secret.
# - If DEBUG=True and SECRET_KEY is missing, this template will auto-generate a temporary key at runtime.
SECRET_KEY=

# ALLOWED_HOSTS is a comma-separated list of hostnames the app will serve.
# Examples:
# - Local: localhost,127.0.0.1
# - Render: .onrender.com
ALLOWED_HOSTS=localhost,127.0.0.1

# DATABASE_URL configures the database connection.
# Leave empty to use SQLite (db.sqlite3) for local development.
# Postgres example:
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=
